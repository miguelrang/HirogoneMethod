<Suggestion>:
	text: root.text
	markup: True

Hirogone:
	id: hirogone
	name: 'hirogone'

	MDBoxLayout:
		orientation: 'vertical'
		md_bg_color: (149/255, 13/255, 13/255, 1)

		MDToolbar:
			title: 'Metodo Hirogone'
			specific_text_color: (149/255, 13/255, 13/255, 1)
			md_bg_color: (255/255, 255/255, 255/255, 1)

		MDBoxLayout:
			orientation: 'vertical'
			spacing: dp(5)
			padding: dp(5), dp(10), dp(5), dp(5)

			MDLabel:
				text: "[color=#ffffff][size=20]Usa esta app para poder generar tus conceptos que te ayuden a recordar los números telefonicos.[/size][/color]"
				markup: True
				halign: 'left'
				valign: "center"
				size_hint_y: .15

			MDLabel:
				text: "[color=#ffffff][size=17]Escriba su número en el siguiente campo agrupandolos por un '-'. Debe de haber al menos dos digitos por cada guión. Ejemplo: 12-4632-9134[/size][/color]"
				markup: True
				halign: 'left'
				valign: "center"
				size_hint_y: .25

			MDTextFieldRect:
				id: nums
				name: 'nums'

				hint_text: 'Escribe los números'
				on_text: root.onTextNumbs(self, self.text)
				size_hint_y: .15
				multiline: False
				
			MDLabel:
				text: '[color=#ffffff]Puedes agregar tus propias claves (opcional).[/color]'
				markup: True
				halign: 'left'
				valign: 'center'
				size_hint_y: .1

			ScrollView:
				scroll_type: ["bars", "content"]
				bar_width: '20dp'
				bar_inactive_color: (.5, .5, .5, 1)
				do_scroll_y: True
				size_hint_y: .3

				canvas.after:
					Color:
						rgb: (1, 1, 1)

					Line:
						rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
						width: 1.1
				MDGridLayout:
					cols: 6
					padding: dp(1), dp(2), dp(1), dp(2)
					adaptive_height: True

					MDLabel:
						text: '[color=#ffffff]1[/color]'
						markup: True
						halign: 'center'
						valign: 'center'
						size_hint: .1, None
						size: self.size[0], 40

					MDTextFieldRect:
						id: one
						name: 'one'

						text: 'T-D'
						hint_text: 'T-D'
						multiline: False
						on_text: root.validInputs(self)
						on_focus: root.validInputs(self, one.text, two.text, three.text, four.text, five.text, six.text, seven.text, eight.text, nine.text, zero.text)

					MDLabel:
						text: '[color=#ffffff]2[/color]'
