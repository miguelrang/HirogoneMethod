					MDLabel:
						text: '[color=#ffffff]0[/color]'
						markup: True
						halign: 'center'
						valign: 'center'
						size_hint: .1, None
						size: self.size[0], 40
						size: self.size[0], 40

					MDTextFieldRect:
						id: zero
						name: 'zero'

						text: 'S'
						hint_text: 'S'
						multiline: False
						on_text: root.validInputs(self)
						on_focus: root.validInputs(self, one.text, two.text, three.text, four.text, five.text, six.text, seven.text, eight.text, nine.text, zero.text)

			Button:
				text: 'Generar Palabras'
				color: (0, 0, 0, 1)
				size_hint_y: .15
				background_color: (0, 0, 0, 0)
				on_press: self.background_color = (0, 0, 0, 1)
				on_release:
					self.background_color = (0, 0, 0, 0)
					if root.validNum(nums.text) and one.text and two.text and three.text and four.text and five.text and six.text and seven.text and eight.text and nine.text and zero.text:\
					root.generateWords(
					keys={
					'0': zero.text,
					'1': one.text,
					'2': two.text,
					'3': three.text,
					'4': four.text,
					'5': five.text,
					'6': six.text,
					'7': seven.text,
					'8': eight.text,
					'9': nine.text
					},
					num=nums.text.split('-')
					)
					
				canvas.before:
					Color:
						rgb: (1, 1, 1)

					RoundedRectangle:
						size: self.size
						pos: self.pos

					Color:
						rgb: (0, 1, 1)

					Line:
						rounded_rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10
			
			MDLabel:
				text: 'Presiona de nuevo el botón para cambiar el color de las letras.'
				size_hint_y: .08
				font_size: dp(14)
				theme_text_color: 'Custom'
				text_color: (1, 1, 1, 1)

			MDBoxLayout:
				orientation: 'vertical'

				canvas.before:
					Color:
						rgb: (1, 1, 1)
					RoundedRectangle:
						size: self.size
						pos: self.pos

					Color:
						rgb: (0, 0, .7)
					Line:
						rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

				RecycleView:
	                id: recycle
	                name: 'recycle'

	                key_viewclass: 'viewclass'
	                pos_hint: {'center_x': .5, 'center_y': .5}
	                key_size: 'height'
	                scroll_type: ["bars", "content"]
					bar_width: '20dp'
					bar_inactive_color: (.5, .5, .5, 1)
					

	                RecycleGridLayout:
	                    id: recycle_grid
	                    name: 'recycle_grid'

	                    cols: 4
	                    padding: dp(2), dp(1), dp(2), dp(1)
	                    default_size: None, dp(48)
	                    default_size_hint: 1, None
	                    size_hint_y: None
	                    height: self.minimum_height
	                    row_default_height: 70


